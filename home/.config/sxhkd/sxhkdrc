##---------- Keybindings for bspwm ----------##

# Terminal or Fullscreen Terminal
super + {_,shift + } Return
	{alacritty,~/.config/bspwm/scripts/bin/furminal}

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	sh ~/.config/bspwm/rofi/bin/launcher

# dmenu
super + F1
	dmenu_run -l 10 -nb '#323f4e' -nf '#cfd8dc' -sb '#cfd8dc' -sf '#263238' -fn 'Source Code Pro Medium-9' -p 'ï€‰ '

# Rofi Themes
super + t
	sh ~/.config/bspwm/rofi/bin/themes

# Rofi Menus/Applets
super + {w,x,r,p,n,a}
	sh ~/.config/bspwm/rofi/bin/{windows,powermenu,asroot,mpd,network,apps}
	
Print
	sh ~/.config/bspwm/rofi/bin/screenshot

##---------- Applications ----------##

# Launch Apps
super + {e,b,m,g}
	{nautilus,firefox,thunderbird,geany}

# Terminal Apps
ctrl + alt + {m,v,r,h,n,c,p}
	alacritty --hold -e {cmatrix,nvim,ranger,htop,neofetch,cava,ncmpcpp}

# Color Picker
super + Insert
	~/.config/bspwm/scripts/bin/color-gpick

##---------- System Keys ----------##

# Brighness control
XF86MonBrightness{Up,Down}
	~/.config/bspwm/scripts/bin/brightness{ --inc, --dec}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	~/.config/bspwm/scripts/bin/volume{ --inc, --dec}

XF86AudioMute
	~/.config/bspwm/scripts/bin/volume --toggle
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + c
	bspc node -c

# Kill App
alt + F4
	bspc node -k

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Kill a window using left click
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen, Max Fullscreen or Monocle
super + {f,F11}
    bspc {desktop -l next,node -t "~"fullscreen}

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
## Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + shift + i
	winmask		

##---------- EOF ----------##
